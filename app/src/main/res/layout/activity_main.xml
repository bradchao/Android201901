<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:brad="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    brad:layout_width="match_parent"
    brad:layout_height="match_parent"
    brad:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        brad:id="@+id/lottery"
        brad:layout_width="match_parent"
        brad:layout_height="wrap_content"
        brad:text="Hello, World"
        brad:gravity="center_horizontal"
        brad:textSize="24sp"
        brad:textStyle="bold"
        />
    <Button
        brad:id="@+id/click"
        brad:layout_width="match_parent"
        brad:layout_height="wrap_content"
        brad:text="Click"
        brad:textAllCaps="false"
        />
</LinearLayout>